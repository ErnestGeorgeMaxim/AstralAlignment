<UserControl x:Class="AstralAlignment.Views.GameSetUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AstralAlignment.Views"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">

    <UserControl.Background>
        <ImageBrush ImageSource="/Images/background-image.jpg" Stretch="Fill"/>
    </UserControl.Background>

    <UserControl.Resources>
        <!-- Built-in converter, no need to create it -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Button style -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#FF404682"/>
            <Setter Property="Foreground" Value="#FFFFB200"/>
            <Setter Property="FontFamily" Value="Castellar"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderBrush" Value="#FFFFB200"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" RenderingBias="Quality"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5F6BB7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF242D5B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1024" Height="768">
            <!-- Title -->
            <TextBlock Text="Game Setup"
                       FontSize="44"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,50,0,0"
                       Foreground="#FFFFB200"
                       Width="400"
                       FontFamily="Castellar"
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="White" BlurRadius="50" RenderingBias="Quality" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Main content panel -->
            <Border BorderBrush="#FFFFB200" BorderThickness="3" CornerRadius="10" Background="#44404682"
                    Margin="100,120,100,120">
                <Border.Effect>
                    <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" RenderingBias="Quality"/>
                </Border.Effect>
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Category Selection -->
                    <StackPanel Grid.Row="0" Margin="0,20,0,20">
                        <TextBlock Text="Select Image Category:"
                                   FontFamily="Castellar"
                                   FontSize="28"
                                   Foreground="#FFFFB200"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" RenderingBias="Quality"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Width="300"
                                  Height="40"
                                  FontFamily="Castellar"
                                  FontSize="20"
                                  Foreground="#FFFFB200"
                                  Background="#66404682"
                                  BorderBrush="#FFFFB200"
                                  BorderThickness="2"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Game Mode Selection -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,20">
                        <TextBlock Text="Game Mode:"
                                   FontFamily="Castellar"
                                   FontSize="28"
                                   Foreground="#FFFFB200"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" RenderingBias="Quality"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <RadioButton Content="Standard (4x4)"
                                         IsChecked="{Binding IsStandardMode}"
                                         FontFamily="Castellar"
                                         FontSize="20"
                                         Foreground="#FFFFB200"
                                         Margin="0,0,50,0"/>
                            <RadioButton Content="Custom"
                                         IsChecked="{Binding IsCustomMode}"
                                         FontFamily="Castellar"
                                         FontSize="20"
                                         Foreground="#FFFFB200"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Custom Game Settings - Simplified approach -->
                    <StackPanel Grid.Row="2" Visibility="{Binding IsCustomMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Custom Board Size:"
                                   FontFamily="Castellar"
                                   FontSize="24"
                                   Foreground="#FFFFB200"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0" RenderingBias="Quality"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Rows setting - Simplified binding -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Rows (2-6):"
                                       FontFamily="Castellar"
                                       FontSize="20"
                                       Foreground="#FFFFB200"
                                       Margin="0,0,20,0"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      SelectedIndex="{Binding RowsIndex}"
                                      Width="80"
                                      Height="40"
                                      FontFamily="Castellar"
                                      FontSize="18"
                                      Margin="0,0,0,10">
                                <ComboBoxItem>2</ComboBoxItem>
                                <ComboBoxItem>3</ComboBoxItem>
                                <ComboBoxItem>4</ComboBoxItem>
                                <ComboBoxItem>5</ComboBoxItem>
                                <ComboBoxItem>6</ComboBoxItem>
                            </ComboBox>

                            <!-- Columns setting - Simplified binding -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Columns (2-6):"
                                       FontFamily="Castellar"
                                       FontSize="20"
                                       Foreground="#FFFFB200"
                                       Margin="0,0,20,0"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      SelectedIndex="{Binding ColumnsIndex}"
                                      Width="80"
                                      Height="40"
                                      FontFamily="Castellar"
                                      FontSize="18">
                                <ComboBoxItem>2</ComboBoxItem>
                                <ComboBoxItem>3</ComboBoxItem>
                                <ComboBoxItem>4</ComboBoxItem>
                                <ComboBoxItem>5</ComboBoxItem>
                                <ComboBoxItem>6</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Menu Bar -->
            <DockPanel VerticalAlignment="Top" Height="30">
                <Menu DockPanel.Dock="Top" Background="#FF404682" Foreground="#FFFFB200" FontFamily="Castellar">
                    <MenuItem Header="File">
                        <MenuItem Header="Category" ItemsSource="{Binding Categories}">
                            <MenuItem.ItemContainerStyle>
                                <Style TargetType="MenuItem">
                                    <Setter Property="Header" Value="{Binding}"/>
                                    <Setter Property="Command" Value="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Menu}}}"/>
                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                </Style>
                            </MenuItem.ItemContainerStyle>
                        </MenuItem>
                        <Separator />
                        <MenuItem Header="New Game" Command="{Binding NewGameCommand}"/>
                        <MenuItem Header="Open Game" Command="{Binding OpenGameCommand}"/>
                        <MenuItem Header="Save Game" Command="{Binding SaveGameCommand}"/>
                        <Separator />
                        <MenuItem Header="Statistics" Command="{Binding ViewStatisticsCommand}"/>
                        <Separator />
                        <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                    </MenuItem>

                    <MenuItem Header="Options">
                        <MenuItem Header="Standard (4x4)" IsCheckable="True" IsChecked="{Binding IsStandardMode}"/>
                        <MenuItem Header="Custom" IsCheckable="True" IsChecked="{Binding IsCustomMode}"/>
                    </MenuItem>

                    <MenuItem Header="Help">
                        <MenuItem Header="About">
                            <!-- Fixed: Replace RelayCommand with proper binding or implement code-behind event -->
                            <MenuItem.Command>
                                <Binding Path="ShowAboutCommand"/>
                            </MenuItem.Command>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </DockPanel>

            <!-- Bottom buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
                <Button Content="NEW GAME"
                        Command="{Binding NewGameCommand}"
                        Style="{StaticResource StyledButton}" 
                        Margin="15,0"/>
                <Button Content="LOAD GAME"
                        Command="{Binding OpenGameCommand}"
                        Style="{StaticResource StyledButton}" 
                        Margin="15,0"/>
                <Button Content="EXIT"
                        Command="{Binding ExitCommand}"
                        Style="{StaticResource StyledButton}" 
                        Margin="15,0"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>